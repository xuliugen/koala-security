<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    <context:property-placeholder location="classpath*:META-INF/props/*.properties" ignore-unresolvable="true"/>
    <import resource="classpath*:META-INF/spring/sys-root.xml"/>
    <import resource="classpath:META-INF/spring/security-shiro.xml"/>
    <import resource="classpath:META-INF/spring/security-extend.xml"/>
    <import resource="classpath*:META-INF/spring/persistence-context.xml"></import>
    <import resource="classpath:META-INF/spring/security-shiro.xml"></import>
    <import resource="classpath*:META-INF/spring/security-shared-persistence.xml"></import>
    <import resource="classpath*:META-INF/spring/security-extend.xml"></import>
</beans>
